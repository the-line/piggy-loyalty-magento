<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <!-- Invalidate Leat section when a reward is redeemed -->
    <action name="leat/reward/redeem">
        <section name="leat"/>
    </action>

    <!-- Invalidate Leat section when collectible rewards are requested -->
    <action name="leat/reward/collectiblerewards">
        <section name="leat"/>
    </action>

    <!-- Invalidate Leat section when a coupon is collected/applied -->
    <action name="leat/coupon/collect">
        <section name="leat"/>
        <section name="cart"/>
    </action>

    <!-- Invalidate Leat section when a coupon is removed -->
    <action name="leat/coupon/remove">
        <section name="leat"/>
        <section name="cart"/>
    </action>

    <action name="rest/*/V1/carts/*/payment-information">
        <section name="leat"/>
    </action>

    <action name="checkout/onepage/saveOrder">
        <section name="leat"/>
    </action>

    <action name="customer/ajax/login">
        <section name="leat"/>
    </action>
</config>
