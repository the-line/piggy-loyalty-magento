<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="leat_loyalty" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Leat_LoyaltyFrontend/js/view/checkout/summary/leat-credit-count</item>
                                                            <item name="sortOrder" xsi:type="string">990</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Leat_LoyaltyFrontend/checkout/summary/leat-credit-count</item>
                                                                <item name="title" xsi:type="string" translate="true">Your received credits</item>
                                                            </item>
                                                        </item>
                                                        <item name="leat_loyalty_balance" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Leat_LoyaltyFrontend/js/view/checkout/summary/leat-balance</item>
                                                            <item name="sortOrder" xsi:type="string">95</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Prepaid Balance</item>
                                                            </item>
                                                        </item>
                                                        <item name="leat_loyalty_giftcard" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Leat_LoyaltyFrontend/js/view/checkout/summary/leat-giftcard</item>
                                                            <item name="sortOrder" xsi:type="string">95</item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="title" xsi:type="string" translate="true">Leat Gift Card</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="afterMethods" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="leat-balance" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Leat_LoyaltyFrontend/js/view/payment/leat-balance</item>
                                                                    <item name="sortOrder" xsi:type="string">20</item>
                                                                    <item name="displayArea" xsi:type="string">afterMethods</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="template" xsi:type="string">Leat_LoyaltyFrontend/payment/leat-balance</item>
                                                                    </item>
                                                                </item>
                                                                <!-- Leat Giftcard Input Component -->
                                                                <item name="leat-giftcard" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Leat_LoyaltyFrontend/js/view/payment/leat-giftcard</item>
                                                                    <item name="sortOrder" xsi:type="string">30</item> <!-- After leat-balance -->
                                                                    <item name="displayArea" xsi:type="string">afterMethods</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="template" xsi:type="string">Leat_LoyaltyFrontend/payment/leat-giftcard</item>
                                                                        <item name="title" xsi:type="string" translate="true">Apply Gift Card</item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
