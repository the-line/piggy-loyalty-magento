<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="actions">
        <!-- Add Gift SKUs field -->
        <field name="gift_skus" formElement="textarea" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Gift Product SKUs</label>
                <dataScope>gift_skus</dataScope>
                <visible>true</visible>
                <notice translate="true">Enter comma-separated product SKUs to add as gifts. For configurable products, you can use the simple product SKU.</notice>
                <additionalClasses>
                    <class name="gift-skus-field">true</class>
                </additionalClasses>
            </settings>
        </field>
    </fieldset>
</form>
