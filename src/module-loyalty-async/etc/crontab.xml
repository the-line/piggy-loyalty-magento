<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="leat_integration">
        <!-- Leat Credit/Order related crons -->
        <job name="leat_loyalty_sync_orders" instance="Leat\LoyaltyAsync\Cron\Order\OrderExport"
             method="execute">
            <!--      Every minute      -->
            <schedule>*/1 * * * *</schedule>
        </job>
        <job name="leat_loyalty_sync_giftcard_purchase" instance="Leat\LoyaltyAsync\Cron\Order\GiftcardProductExport"
             method="execute">
            <!--      Every five minutes      -->
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
    <group id="leat_async_queue">
        <job name="leat_loyalty_queue_alert" instance="Leat\LoyaltyAsync\Cron\QueueAlert"
             method="execute">
            <!--      At 10:00 on mondays      -->
            <schedule>0 10 * * 1</schedule>
        </job>
    </group>
</config>
